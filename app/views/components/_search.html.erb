
<div class="page-header text-center">
  <h3>Pesquisa</h3>
</div>
<%= form_tag '/search', method: 'get' do %>
  <div class="input-group">
    <%= text_field_tag :q, '', placeholder: 'Buscar', class: 'form-control' %>
    <div class="input-group-btn">      
      <button id="searchvis" class="btn btn-primary"><i class="glyphicon glyphicon-search"></i></button>
    </div>
  </div>
<% end %>
<table class="table table-striped table-hover">
  <thead>
  <tr>
    <th>Nome</th>
  </tr>
  </thead>
  <tbody>
  <% @visitors.each do |v| %>
    <tr>
      <td>
        <%= form_tag  '/choose', method: 'get' do %>
          <%= hidden_field_tag 'id', v['id'] %>
          <%= submit_tag v['nome'], class: 'btn-link' %>
        <% end %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>